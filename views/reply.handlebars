<body
  style="background:url(https://www.tessa-dam.com/files/tessa-dam/background/background_paper-min.jpg);"
>
  {{! Chat bubbles }}
<div class="main-content row">
<div class="asideLeft col-3" style:""></div>
<div class="middle col-6">
  <div
    class="reply-area"
    style="  display: flex; justify-content: center; background-image: var(--body-bg); font-family: Helvetica, sans-serif;"
  >
    <section
      class="msger"
      style="display: flex; flex-flow: column wrap; width: 500px; max-width: 867px; margin: 25px 10px; border: var(--border); border-radius: 5px; background: var(--msger-bg); box-shadow: 0 15px 15px -5px rgba(0, 0, 0, 0.2);"
    >
      <header
        class="msger-header"
        style="display: flex; padding: 10px; border-bottom: var(--border); background: #eee; color: #666;"
      >
        <div class="msger-header-title">
          <i class="fas fa-comment-alt"></i>
          Reply Section
        </div>
      </header>


      <div class="replies-content">
        {{#each replies as |reply|}}
          <main
            class="msger-chat"
            style="flex: 1; overflow-y: auto; padding: 10px; ::-webkit-scrollbar (width: 6px); ::-webkit-scrollbar-track (background: #ddd);::-webkit-scrollbar-thumb (background: #bdbdbd); background-color: #fcfcfe; background-image: url()"
          >
            <div
              class="msg"
              style="display: flex; align-items: flex-end; margin-bottom: 10px;"
            >
              <div
                class="msg-img"
                style="background-image: url(https://image.flaticon.com/icons/svg/327/327779.svg); width: 50px; height: 50px; margin-right: 10px; background: #ddd; background-repeat: no-repeat; background-position: center; background-size: cover; border-radius: 50%;"
              >
              </div>
              <div
                class="msg-bubble"
                style="max-width: 450px; padding: 15px; border-radius: 15px; background: var(--left-msg-bg);"
              >
                <div
                  class="msg-info"
                  style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;"
                >
                  <div
                    class="msg-info-name"
                    style=" margin-right: 10px; font-weight: bold;"
                  >BOT</div>
                  <div
                    class="msg-info-time"
                    style="  font-size: 0.85em;"
                  >{{format_date createdAt}}</div>
                </div>
                <div class="msg-text"> {{body}} </div>
              </div>
            </div>
          </main>
        {{/each}}
      </div>
      <div class="form-group" id="language-field" style="display: none">
        <form>
          <label for="language-abbreviation">Please select a section of text and
            the language you'd like it to be translated to:</label>
          <select name="Language" id="language-abbreviation">
            <option value="BG">Bulgarian</option>
            <option value="CS">Czech</option>
            <option value="DA">Danish</option>
            <option value="EL">Greek</option>
            <option value="EN-GB">English (British)</option>
            <option value="EN-US">English (American)</option>
            <option value="ES">Spanish</option>
            <option value="ET">Estonian</option>
            <option value="FI">Finnish</option>
            <option value="FR">French</option>
            <option value="HU">Hungarian</option>
            <option value="IT">Italian</option>
            <option value="JA">Japenese</option>
            <option value="LT">Lithuanian</option>
            <option value="LV">Latvian</option>
            <option value="NL">Dutch</option>
            <option value="PL">Polish</option>
            <option value="PT-BR">Portuguese (Brazilian)</option>
            <option value="PT-PT">Portuguese</option>
            <option value="RO">Romanian</option>
            <option value="RU">Russian</option>
            <option value="SK">Slovak</option>
            <option value="SL">Slovenian</option>
            <option value="SV">Swedish</option>
            <option value="ZH">Chinese</option>
          </select>
          <button
            class="btn btn-primary"
            type="submit"
            id="translate-button"
          >Translate Text</button>
        </form>
      </div>
      <form
        class="msger-inputarea"
        style=" display: flex; padding: 10px; border-top: var(--border); background: #eee; *padding: 10px; border: none; border-radius: 3px;
  font-size: 1em;"
      >

        <input
          type="text"
          id="body"
          name="body"
          class="msger-input"
          style="flex: 1; background: #ddd;"
          placeholder="Enter your message..."
        />{{body}}
        <input
          type="button"
          id="submitReply"
          class="msger-send-btn"
          style=" margin-left: 10px; background: rgb(0, 196, 65); color: #fff; font-weight: bold; cursor: pointer; transition: background 0.23s;"
          value="Submit"
        />
      </form>
      </div>
    </section>
  </div>
  <div class="asideRight col-3" style:""></div>
  </div>
  {{! Submit text section }}
  {{!-- {{#if loggedIn}} --}}

</body>

{{!-- {{else}} --}}
{{! <div>
    <p>Please login or sign-up to post</p>
</div> }}
{{!-- {{/if}} --}}

<script src="/add-reply.js"></script>
<script src="/translatewithdeep.js"></script>