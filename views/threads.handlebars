<div class="thread-container">
  <div class="card-header col-md-10 d-grid gap-2 col-6 mx-auto text-center">

      <h1>
        Threads Dashboard
      </h1>

  </div>
  <!-- We implement the built-in helper, #each. This helper will iterate over dishes -->
  {{#each threads as |tread|}}
  <!-- For each dish in the array of dish objects, the following <div> will be rendered. -->
    
<div class="d-grid gap-2 col-6 mx-auto">
  <button class="btn btn-primary" type="button">{{title}}</button>
</div>

    <ul class="d-grid gap-2 col-6 mx-auto">
      <li>  
        {{body}}
      </li>
    </ul>
</div>   

    </div>
    <!-- Below, we close the #each helper. -->
  {{/each}}
</div>
