<div class="thread-container">
  <div class="card-header text-center">

      <h1>
        Threads Dashboard
      </h1>

  </div>
  {{!-- {{#if loggedIn}} --}}
<div class="container mt-5">
  <div class="row">
    <div class="col text-center">

{{!-- hidden new thread form --}}
      <div id="newThread" style="display: none;">
        <form>
          <div class="form-group">
            <label for="threadTitle">Title of New Thread</label>
            <input type="text" class="form-control" id="threadTitle" placeholder="Thread Title">
          </div>
          <div class="form-group">
            <label for="threadBody">Describe the thread</label>
            <input type="text" class="form-control" id="threadBody" placeholder="Description">
          </div>
           <input type="button" id="submitThread" value="Submit"/>
        </form>
      </div>

       <input type="button" id="newThreadBtn" value="Create a new Thread" style="display: inline;"/>
    </div>
  </div>
</div>

{{!-- {{/if}} --}}

  {{#each threads as |tread|}}
<div class="m-5 w-50 d-grid gap-2 col-6 mx-auto text-center">    
<div class="card text-center">
  <div class="card-header">
    ~ Thread Topic ~
  </div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text"><i>{{body}}</i></p>
    <a href="/api/replies/{{id}}" class="btn btn-primary">Go to discussion</a>
  </div>
</div>
</div>
  {{/each}}
</div>



<script src="/add-post.js"></script>